{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Portfolio</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Breakdown</th>
                <td>{{ dump(entity.portfolioBreakdown) }}</td>
            </tr>
            <tr>
                <th>Today's Cost</th>
                <td>{{ entity.todaysCost }}</td>
            </tr>
        </tbody>
    </table>
    <script type="text/javascript">
        {{ chart(chart) }}
    </script>
    <div id="linechart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
        <ul class="record_actions">
    <li>
        <a href="{{ path('portfolio') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('portfolio_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
